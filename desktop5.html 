    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const menuItems = document.querySelectorAll('.menu-item');
            const fileItems = document.querySelectorAll('.file-item');
            let selectedIndex = 0;
            let currentCategory = null;
            
            // Mostrar categoria
            function showCategory(categoryId) {
                document.querySelectorAll('.file-content').forEach(el => {
                    el.style.display = 'none';
                });
                document.querySelector(categoryId).style.display = 'block';
                currentCategory = categoryId;
            }
            
            // Mostrar detalhe do arquivo
            function showFileDetail(fileId) {
                document.querySelectorAll('.file-detail').forEach(el => {
                    el.style.display = 'none';
                });
                document.querySelector(fileId).style.display = 'block';
            }
            
            // Navegação por teclado
            document.addEventListener('keydown', (e) => {
                if (document.querySelector('.file-detail[style*="display: block"]')) {
                    if (e.key === 'Enter') {
                        document.querySelector('.file-detail').style.display = 'none';
                        document.querySelector(currentCategory).style.display = 'block';
                    }
                    return;
                }
                
                if (document.querySelector('.file-content[style*="display: block"]')) {
                    if (e.key === 'Escape') {
                        document.querySelector(currentCategory).style.display = 'none';
                        currentCategory = null;
                        updateSelection();
                        return;
                    }
                    
                    const fileItems = document.querySelectorAll('.file-item');
                    if (fileItems.length > 0) {
                        if (e.key === 'ArrowUp') {
                            e.preventDefault();
                            selectedIndex = (selectedIndex - 1 + fileItems.length) % fileItems.length;
                            fileItems.forEach((item, index) => {
                                if (index === selectedIndex) {
                                    item.style.borderColor = '#0a0';
                                } else {
                                    item.style.borderColor = '';
                                }
                            });
                        } else if (e.key === 'ArrowDown') {
                            e.preventDefault();
                            selectedIndex = (selectedIndex + 1) % fileItems.length;
                            fileItems.forEach((item, index) => {
                                if (index === selectedIndex) {
                                    item.style.borderColor = '#0a0';
                                } else {
                                    item.style.borderColor = '';
                                }
                            });
                        } else if (e.key === 'Enter') {
                            const fileId = fileItems[selectedIndex].dataset.content;
                            showFileDetail('#' + fileId);
                        }
                    }
                    return;
                }
                
                if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    selectedIndex = (selectedIndex - 1 + menuItems.length) % menuItems.length;
                    updateSelection();
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    selectedIndex = (selectedIndex + 1) % menuItems.length;
                    updateSelection();
                } else if (e.key === 'Enter') {
                    const target = menuItems[selectedIndex].dataset.target;
                    showCategory(target);
                }
            });
            
            // Atualizar seleção
            function updateSelection() {
                menuItems.forEach((item, index) => {
                    if (index === selectedIndex) {
                        item.classList.add('selected');
                    } else {
                        item.classList.remove('selected');
                    }
                });
            }
            
            // Navegação por clique
            menuItems.forEach(item => {
                item.addEventListener('click', () => {
                    showCategory(item.dataset.target);
                });
            });
            
            fileItems.forEach(item => {
                item.addEventListener('click', () => {
                    showFileDetail('#' + item.dataset.content);
                });
            });
            
            // Focar no primeiro item
            updateSelection();
        });
    </script>
</body>
