                    <span>REDE: CINET-01</span>
                </div>
            </div>
        </div>
        
        <div class="terminal">
            <div class="screen">
                <div class="output">
                    > INICIANDO MÓDULO DE SIMULAÇÃO TÉCNICA...<br>
                    > CARREGANDO PARÂMETROS...<br>
                    <span class="success">> SISTEMA PRONTO</span><br><br>
                    > ESCOLHA CATEGORIA:
                </div>
                <div class="menu">
                    <div class="menu-item selected" data-category="biologia">
                        > BIOLOGIA
                    </div>
                    <div class="menu-item" data-category="tecnologia">
                        > TECNOLOGIA
                    </div>
                    <div class="menu-item" data-category="armamentos">
                        > ARMAMENTOS
                    </div>
                    <div class="menu-item" data-category="protecao">
                        > PROTEÇÃO
                    </div>
                    <div class="menu-item" data-category="anomalias">
                        > ANOMALIAS
                    </div>
                </div>
                
                <div id="complexity-section" style="display: none; margin-top: 20px;">
                    <div class="output">
                        > SELECIONE NIVEL DE COMPLEXIDADE:
                    </div>
                    <div class="complexity-input">
                        <input type="range" min="1" max="10" value="5" class="complexity-slider" id="complexity-slider">
                        <div class="complexity-value">
                            > NÍVEL: <span id="complexity-value">5</span>
                        </div>
                        <button id="run-simulation" class="submit-btn">EXECUTAR SIMULAÇÃO</button>
                    </div>
                </div>
                
                <div id="simulation-result" style="display: none; margin-top: 15px;">
                    <div class="result-code">
                        > COMPILAÇÃO BEM-SUCEDIDA<br>
                        > CÓDIGO DE VERIFICAÇÃO: <span id="verification-code">V3C9-LP02</span>
                    </div>
                    <div class="output">
                        > PRESSIONE ENTER PARA CONTINUAR...
                    </div>
                </div>
            </div>
        </div>
        
        <div class="terminal-footer">
            > CINET v3.7.2 // SISTEMA DE SEGURANÇA RESTRITO // TODAS AS AÇÕES MONITORADAS
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const menuItems = document.querySelectorAll('.menu-item');
            const complexitySection = document.getElementById('complexity-section');
            const complexitySlider = document.getElementById('complexity-slider');
            const complexityValue = document.getElementById('complexity-value');
            const runSimulation = document.getElementById('run-simulation');
            const simulationResult = document.getElementById('simulation-result');
            let selectedIndex = 0;
            let selectedCategory = null;
            
            // Atualizar valor do slider
            complexitySlider.addEventListener('input', () => {
                complexityValue.textContent = complexitySlider.value;
            });
            
            // Executar simulação
            runSimulation.addEventListener('click', () => {
                simulationResult.style.display = 'block';
                document.getElementById('verification-code').textContent = generateRandomCode();
                
                // Simular processamento
                const resultText = `
> SIMULAÇÃO ${selectedCategory.toUpperCase()} - NÍVEL ${complexitySlider.value}
> -----------------------------------
> INICIANDO PROCESSO DE COMPILAÇÃO...
> CARREGANDO MÓDULOS ESPECIALIZADOS...
> EXECUTANDO ALGORITMO DE PREDIÇÃO...
> OTIMIZANDO PARÂMETROS...
> ANÁLISE DE RESULTADOS CONCLUÍDA.

> STATUS: SUCESSO
> EFICIÊNCIA: ${85 + parseInt(complexitySlider.value)}%
> TEMPO DE EXECUÇÃO: ${(1.5 - parseInt(complexitySlider.value)/20).toFixed(2)}S
                `;
                
                simulationResult.querySelector('.output').textContent = resultText;
            });
            
            // Navegação por teclado
            document.addEventListener('keydown', (e) => {
                if (simulationResult.style.display === 'block') {
                    if (e.key === 'Enter') {
                        window.location.href = 'desktop7.html';
                    }
                    return;
                }
                
                if (complexitySection.style.display === 'block') {
                    if (e.key === 'Escape') {
                        complexitySection.style.display = 'none';
                        updateSelection();
                        return;
                    }
                    return;
                }
                
                if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    selectedIndex = (selectedIndex - 1 + menuItems.length) % menuItems.length;
                    updateSelection();
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    selectedIndex = (selectedIndex + 1) % menuItems.length;
                    updateSelection();
                } else if (e.key === 'Enter') {
                    selectedCategory = menuItems[selectedIndex].dataset.category;
                    complexitySection.style.display = 'block';
                }
            });
            
            // Atualizar seleção
            function updateSelection() {
                menuItems.forEach((item, index) => {
                    if (index === selectedIndex) {
                        item.classList.add('selected');
                    } else {
                        item.classList.remove('selected');
                    }
                });
            }
            
            // Gerar código aleatório
            function generateRandomCode() {
                const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
                let code = '';
                
                for (let i = 0; i < 4; i++) {
                    code += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                
                return code;
            }
            
            // Focar no primeiro item
            updateSelection();
        });
    </script>
</body>
